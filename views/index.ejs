<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>isitSafe</title>
</head>
<body>
    <header>
        <h1>Is it safe?</h1>
    </header>
    <main>
        <section class="allergy dialogue">
            <h2>Avoid</h2>
            <ul class="allergies">
                <% for(var i=0; i<allergies.length; i++) {%>
                    <li class="allergyItem">
                        <span><%= allergies[i].allergy %></span>
                        <div><img src="/images/edit.png"><img src="/images/remove.png"></div>
                    </li>
                <% } %>
            </ul>
            <form action="/allergies" method="POST">
                <div>
                    <input type="text" placeholder="Allergic Food" name="allergy">
                    <button type="submit">Add</button>
                </div>
            </form>
        </section>
        <section class="safe dialogue">
            <h2>Safe</h2>
            <form action="/safeFood" method="POST">  
                <input type="text" placeholder="Safe Food" name="safe">
                <button type="submit">Add</button>
            </form>
        </section>
    </main>
    <script src="/main.js"></script>
</body>
</html>